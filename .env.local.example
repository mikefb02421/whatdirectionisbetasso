# Strava API credentials (from https://www.strava.com/settings/api)
STRAVA_CLIENT_ID=your_client_id
STRAVA_CLIENT_SECRET=your_client_secret

# Public client ID for frontend OAuth redirect
NEXT_PUBLIC_STRAVA_CLIENT_ID=your_client_id

# Webhook verification token (you choose this - any random string)
STRAVA_WEBHOOK_VERIFY_TOKEN=your_random_verify_token

# Vercel Postgres (auto-set when you link a Vercel Postgres database)
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Cron secret (set in Vercel project settings)
CRON_SECRET=your_cron_secret
